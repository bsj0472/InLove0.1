<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.b_s_j.inlove01">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InLove01"
        android:usesCleartextTraffic="true">
        <activity android:name=".SignUp" />
        <activity android:name=".Chatting" />
        <activity android:name=".BNV" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustUnspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 카카오 로그인 요청 결과를 받기위한 Redirection URL 용의 액티비티 : 카카오라이브러리에 만들어져있는 -->
        <!-- 로그인 입력창이 있는 액티비티(웹뷰로 보여주고 있는) -->
        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth“ -->
                <data
                    android:host="oauth"
                    android:scheme="kakao1ac10363df1993fe2a17738dd237c610" />
            </intent-filter>
        </activity> <!-- 앱키 추가 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="30320ff14dca1ed591c45255cac0daa7" />
    </application>

</manifest>